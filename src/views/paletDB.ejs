<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="styles.css">
    <link rel="stylesheet" href="style2.css">

    <title>Historico</title>
</head>
<body>
    <nav class="navbar navbar-light bg-light">
        <div class="container-fluid">
          <a href="/" class="navbar-brand">Camara</a>
          <form class="d-flex">
            <input class="form-control me-2" type="search" placeholder="Buscar Palet" aria-label="Search">
            <button class="btn btn-outline-success" type="submit">Buscar</button>
          </form>
        </div>
      </nav>

    <div class="mt-3 text-center">
        <h2>LISTADO DE PALETS</h2>
    </div>

    <div class="dataBase d-flex mx-2">
        <div class="m-2 bg-primary bg-opacity-10 rounded col-4">
            <h4 class="px-3">Palets en CAMARA:</h4>
            <% for(let palet of palets) { %>
                <% if (palet.localizacion === "CAMARA") { %>          
                    <div id="palets" class="m-0">
                        <div class="item shadow-sm m-2 bg-light rounded"><%= palet.idPalet%> - <%= palet.calibre %>  - <%= palet.caja %> (<%= palet.alveolo %>) [<%= palet.localizacion %> ] 
                            <div class="d-flex"> Mover a:
                                <form action="/plaza<%= palet._id%>?_method=PUT" method="POST">
                                    <button class="btn btn-warning btn-sm d-inline mx-2">Plaza</button>
                                </form>
                                <form action="/expedir<%= palet._id%>?_method=PUT" method="POST">
                                    <button class="btn btn-success btn-sm d-inline mx-2">Expedir</button>
                                </form>
                            </div>
                        </div>
                    </div>   
                <% } %> 
            <% } %> 
        </div>
        <div class="m-2 bg-warning bg-opacity-10 rounded col-4">
            <h4 class="px-3">Palets en PLAZA:</h4>
            <% for(let palet of palets) { %>
                <% if (palet.localizacion === "PLAZA") { %>          
                    <div id="palets" class="m-0">
                        <div class="item shadow-sm m-2 bg-light rounded"><%= palet.idPalet%> - <%= palet.calibre %>  - <%= palet.caja %> (<%= palet.alveolo %>) [<%= palet.localizacion %> ]
                            <div class="d-flex"> Mover a:
                                <form action="/camara<%= palet._id%>?_method=PUT" method="POST">
                                    <button class="btn btn-primary btn-sm d-inline mx-2">Camara</button>
                                </form>
                                <form action="/expedir<%= palet._id%>?_method=PUT" method="POST">
                                    <button class="btn btn-success btn-sm d-inline mx-2">Expedir</button>
                                </form>
                            </div>
                        </div>
                    </div>   
                <% } %> 
            <% } %> 
        </div>
        <div class="m-2 bg-success bg-opacity-10 rounded col-4">
            <h4 class="px-3">Palets EXPEDIDOS:</h4>
            <% for(let palet of palets) { %>
                <% if (palet.localizacion === "EXPEDIDO") { %>          
                    <div id="palets" class="m-0">
                        <div class="item shadow-sm m-2 bg-light rounded"><%= palet.idPalet%> - <%= palet.calibre %>  - <%= palet.caja %> (<%= palet.alveolo %>) [<%= palet.localizacion %> ]
                            <div class="d-flex"> Mover a:
                                <form action="/plaza<%= palet._id%>?_method=PUT" method="POST">
                                    <button class="btn btn-warning btn-sm d-inline mx-2">Plaza</button>
                                </form>
                                <form action="/camara<%= palet._id%>?_method=PUT" method="POST">
                                    <button class="btn btn-primary btn-sm d-inline mx-2">Camara</button>
                                </form>
                            </div>
                        </div>
                    </div>   
                <% } %> 
            <% } %> 
        </div>
    </div>



    <!-- jsDelivr :: Sortable :: Latest (https://www.jsdelivr.com/package/npm/sortablejs) -->
<script src="https://cdn.jsdelivr.net/npm/sortablejs@latest/Sortable.min.js"></script>

<script>

  

var palets = new Sortable(document.querySelector('#palets'), {
    group: 'shared', // set both lists to same group
    animation: 150,
    ghostClass: "focus"
});

</script>
</body>
</html>